<h1>New post</h1>

<%= form_for :post, url: posts_path do |f| %>
<%= error_messages_for(@post) %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :text %>
  <%= f.text_area :text %>
</p>

<p>
  <%= f.label :slug %>
  <%= f.text_field :slug %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>

<%= link_to 'Back', posts_path %>
